<h1>NEW GAME </h1>


<ul>
<% @random.each do |letter| %>
<li> <%= letter %></li>
<% end %>
</ul>

<form action="/score" method="post">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <label for="attempt">Your guess here</label> <br>
  <input type="text" name="attempt" id="attempt">
  <%= hidden_field_tag :start_time, @start_time %>
  <%= hidden_field_tag :letters, @random %>
  <input type="submit" value="Done!">
</form>
